<Context>
    <Resource
            name="jdbc/library"
            auth="Container"
            type="javax.sql.DataSource"
            maxActive="100"
            maxIdle="30"
            maxWait="1000"
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/photochecker"
            username="root"
            password="root"
    />
    allowCasualMultipartParsing="true"
    <ResourceLink name="jdbc/library"
                  global="jdbc/library"
                  type="javax.sql.DataSource" />
</Context>