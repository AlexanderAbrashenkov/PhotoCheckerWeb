<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <context-param>
    <param-name>pageTitle</param-name>
    <param-value>Стартовый заголовок</param-value>
  </context-param>



  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.jsp</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>



  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/reports</url-pattern>
    <url-pattern>/reports/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LkaRoleFilter</filter-name>
    <url-pattern>/reports/upload</url-pattern>
    <url-pattern>/reports/lka_criteria</url-pattern>
  </filter-mapping>


  <resource-ref>
    <res-ref-name>jdbc/library</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>

/*1 - MySql database*/
  <env-entry>
    <description>Type of DAO</description>
    <env-entry-name>DAOType</env-entry-name>
    <env-entry-type>java.lang.Integer</env-entry-type>
    <env-entry-value>1</env-entry-value>
  </env-entry>

</web-app>
